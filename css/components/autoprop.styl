

/* PROPRIEDADES */
.float-right {
	float: right;
}

.bg-img {
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
}

.hidden {
	display: none !important;
} 

.float-left {
	float: left;
}

.border-bottom {
	border-bottom: 1px solid #c5c5c5;
    padding-bottom: 10px;
    margin-bottom: 10px;
}

.top-left-radius {
	border-radius: 5px 0 0 0;
}

.top-right-radius {
	border-radius: 0 5px 0 0;
}

.bottom-left-radius {
	border-radius: 0 0 0 5px;
}

.bottom-right-radius {
	border-radius: 0 0 5px 0;
}

.space-default {
	padding: 20px 0;
}

.clearfix {
	clear: both;
}

.strong {
	font-weight: bold !important;
}

.no-mg {
	margin: 0 !important;
}

.mg-bottom {
	margin-bottom: 40px;
}

.space-default-top {
	padding-top: 20px;
}

.flex {
	display: flex;
	flex-direction: column;
}

.a-center {
	text-align: center;
}

.a-right {
	text-align: right;
}

.a-left {
	text-align: left;
}

.space-bottom {
	padding-bottom: 20px;
}

@media (min-width: sm) {
	.space-default {
		padding: 50px 0;
	}
}